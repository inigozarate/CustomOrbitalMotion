            type mNewmark;
        }
        accelerationRelaxation 1;
        accelerationDamping    1;
        nIter   12;
	    amplitude   0.02;
        omega       6.28;
        m           1000000;
	report on;
        mbodies
        {
            movingWalls
            {
                type            mrigidBody;
                parent          root;
                mass            10;
                centreOfMass     (0 0 0.24);
